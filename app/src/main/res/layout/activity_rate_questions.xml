<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="fj.foodjunkies.RateQuestions">

    <ImageView
        android:id="@+id/greyBackground"
        android:layout_width="402dp"
        android:layout_height="565dp"
        android:scaleType="fitXY"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/greyfoodtable" />

    <ImageView
        android:id="@+id/whiteBackground"
        android:layout_width="382dp"
        android:layout_height="402dp"
        android:alpha=".8"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@color/white" />

    <TextView
        android:id="@+id/textLike"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="24dp"
        android:text="Did you like "
        android:textSize="23sp"
        android:typeface="normal"
        app:layout_constraintHorizontal_bias="0.501"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="@+id/whiteBackground" />

    <TextView
        android:id="@+id/textEnjoy"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="176dp"
        android:text="Did you enjoy the"
        android:textSize="23sp"
        android:typeface="normal"
        app:layout_constraintBottom_toBottomOf="@+id/whiteBackground"
        app:layout_constraintHorizontal_bias="0.502"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent" />

    <TextView
        android:id="@+id/textCuisine"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="132dp"
        android:text="Kah food"
        android:textSize="26sp"
        android:textStyle="bold|italic"
        app:layout_constraintBottom_toBottomOf="@+id/whiteBackground"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent" />

    <TextView
        android:id="@+id/textRestaurant"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="64dp"
        android:text="Kah's shop"
        android:textSize="26sp"
        android:textStyle="bold|italic"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="@+id/whiteBackground" />

    <Button
        android:id="@+id/yesButton2"
        android:layout_width="96dp"
        android:layout_height="55dp"
        android:layout_marginStart="64dp"
        android:backgroundTint="@color/emerald"
        android:text="YES"
        android:textColor="@color/white"
        android:textStyle="bold"
        app:layout_constraintBaseline_toBaselineOf="@+id/noButton2"
        app:layout_constraintStart_toStartOf="parent" />

    <Button
        android:id="@+id/noButton2"
        android:layout_width="94dp"
        android:layout_height="55dp"
        android:layout_marginBottom="68dp"
        android:layout_marginEnd="76dp"
        android:backgroundTint="@color/emerald"
        android:text="NO"
        android:textColor="@color/white"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="@+id/whiteBackground"
        app:layout_constraintEnd_toEndOf="parent" />

    <Button
        android:id="@+id/yesButton1"
        android:layout_width="96dp"
        android:layout_height="55dp"
        android:layout_marginStart="64dp"
        android:backgroundTint="@color/emerald"
        android:text="YES"
        android:textColor="@color/white"
        android:textStyle="bold"
        app:layout_constraintBaseline_toBaselineOf="@+id/noButton1"
        app:layout_constraintStart_toStartOf="parent" />

    <Button
        android:id="@+id/noButton1"
        android:layout_width="94dp"
        android:layout_height="55dp"
        android:layout_marginEnd="84dp"
        android:layout_marginTop="120dp"
        android:backgroundTint="@color/emerald"
        android:text="NO"
        android:textColor="@color/white"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="@+id/whiteBackground" />

    <Button
        android:id="@+id/doneButton"
        android:layout_width="82dp"
        android:layout_height="43dp"
        android:backgroundTint="@color/emerald"
        android:text="DONE"
        android:textColor="@color/white"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="@+id/whiteBackground"
        app:layout_constraintRight_toRightOf="parent" />

</android.support.constraint.ConstraintLayout>
