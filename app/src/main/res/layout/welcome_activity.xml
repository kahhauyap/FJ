<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/welcome_background">



    <Button
        android:id="@+id/buttonRate"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/buttonQuiz"
        android:layout_alignStart="@+id/buttonQuiz"
        android:layout_below="@+id/buttonHistory"
        android:backgroundTint="@color/emerald"
        android:text="RATE"
        android:textColor="@color/white"
        android:textSize="22sp" />

    <Button
        android:id="@+id/buttonHistory"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/buttonQuiz"
        android:layout_centerHorizontal="true"
        android:backgroundTint="@color/emerald"
        android:text="HISTORY"
        android:textColor="@color/white"
        android:textSize="22sp" />

    <TextView
        android:id="@+id/textViewUserID"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/linearLayout"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="34dp"
        android:gravity="center"
        android:text="Welcome"
        android:textColor="@color/white"
        android:textSize="40sp"
        android:textStyle="bold|italic"
        android:typeface="sans"
        tools:textColor="@color/white" />

    <Button
        android:id="@+id/buttonRecommend"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/textViewUserID"
        android:layout_alignStart="@+id/textViewUserID"
        android:layout_below="@+id/textViewUserID"
        android:layout_marginTop="41dp"
        android:backgroundTint="@color/emerald"
        android:text="Recommend"
        android:textColor="@color/white"
        android:textSize="22sp" />

    <Button
        android:id="@+id/buttonLogout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignEnd="@+id/buttonSearch"
        android:layout_alignParentBottom="true"
        android:layout_alignRight="@+id/buttonSearch"
        android:layout_marginBottom="15dp"
        android:backgroundTint="@color/emerald"
        android:text="Logout"
        android:textColor="@color/white"
        android:textSize="22sp" />

    <Button
        android:id="@+id/buttonSearch"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/buttonRecommend"
        android:layout_centerHorizontal="true"
        android:backgroundTint="@color/emerald"
        android:text="Search"
        android:textColor="@color/white"
        android:textSize="22sp" />

    <Button
        android:id="@+id/buttonConstraints"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/buttonSearch"
        android:layout_centerHorizontal="true"
        android:backgroundTint="@color/emerald"
        android:text="Constraints"
        android:textColor="@color/white"
        android:textSize="22sp" />

    <Button
        android:id="@+id/buttonQuiz"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/buttonSearch"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="50dp"
        android:backgroundTint="@color/emerald"
        android:text="Quiz"
        android:textColor="@color/white"
        android:textSize="22sp" />

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:gravity="center"
        android:orientation="vertical"
        android:id="@+id/linearLayout">

    </LinearLayout>

</RelativeLayout>

